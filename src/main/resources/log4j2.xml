<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="MarkIV" packages="">
  <Appenders>
    <RollingFile name="RollingFile" fileName="../logs/markiv.log"
                 filePattern="../logs/$${date:yyyy-MM}/markiv-%i.log.gz">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
       <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>