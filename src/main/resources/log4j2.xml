<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MarkIV" packages="">
  <Appenders>
    <RollingFile name="markiv-rf" fileName="../logs/markiv.log"
                 filePattern="../logs/$${date:yyyy-MM}/markiv-%d{MM-dd-yyyy}-%i.log.gz" >
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="250 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="20"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="markiv-rf"/>
    </Root>
  </Loggers>
</Configuration>
